@model DEPI6InstructorCRUDMVCWebAPPTask.Models.Instructor

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Img"></label>
    @if (!string.IsNullOrEmpty(Model?.Img))
    {
        <div>
            <img src="~/images/@Model.Img" alt="Instructor Image" class="m-3" style="width: 100px; height: auto;" />
        </div>
    }
    <input class="form-control" asp-for="Img" />
    <span asp-validation-for="Img" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="DepartmentId"></label>
    <input class="form-control" asp-for="DepartmentId" />
    <span asp-validation-for="DepartmentId" class="text-danger"></span>
</div>
