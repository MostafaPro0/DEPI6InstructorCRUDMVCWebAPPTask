@model IEnumerable<DEPI6InstructorCRUDMVCWebAPPTask.Models.Department>

<h2>Department Details</h2>

<a asp-action="Create" class="btn btn-primary">Create New Department</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>ManagerName</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td class="align-middle">@department.Name</td>
                <td class="align-middle">@department.ManagerName</td>
                    <partial name="_ButtonsPartialView" model="@department.Id" />
            </tr>
        }
    </tbody>
</table>
